											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="3" class="form-control btn btn-login" value="Set new Password">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
        <p style="color:red"> <%- msg %> </p>
