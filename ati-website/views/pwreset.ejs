   // A small script to notify tne user if passwords don't match up.
   function checkPW() {
     var lblPW2 = document.getElementById('confirm-password'),
         lblPW1 = document.getElementById('new-password');

     if (lblPW2.value != lblPW1.value) {
        lblPW2.setCustomValidity('Password Must be Matching.');
     } else {
        // input is valid -- reset the error message
        lblPW2.setCustomValidity('');
     }

     if (lblPW1.value.length < 8) {
       lblPW1.setCustomValidity('Password Must at least be 8 characters.');
     } else {
       lblPW1.setCustomValidity('');
     }
    }
