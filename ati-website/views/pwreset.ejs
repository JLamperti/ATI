  <div class="container" style="padding-top:4%">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="" class="active" ><%- __('pwreset.title') %></a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login-form" action="./<%- validation_token %>/rs" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="password" name="newPassword" id="new-password" tabindex="1" class="form-control" placeholder="<%- __('pwreset.newPW') %>" oninput="checkPW()" required>
									</div>
									<div class="form-group">
										<input type="password" name="newPasswordConf" id="confirm-password" tabindex="2" class="form-control" placeholder="<%- __('pwreset.conf-newPW') %>" oninput="checkPW()" required>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-md-8 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="3" class="form-control btn  bg-color-theme" value="<%- __('pwreset.setPW') %>">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
        <p style="color:red; text-align: center; visibility: <%- msg %>"> <%- __('pwreset.no-pwmatch') %> </p>
			</div>
		</div>
	</div>

