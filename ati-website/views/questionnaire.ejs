        <script>

            function defaultScale() {
                // var url = '/db/get/buckets';
                var url = '/db/buckets';
                fetch(url)
                    .then(res => res.json())
                    .then((out) => {
                        //console.log(out);
                        //console.log(out[0].amount);
                        var data = {
                            labels: [1, 2, 3, 4, 5, 6],
                            series: [[]]

                        };
                        for (i = 0; i < 5; i++) {
                            data.series[0][i] = out[i].amount;
                        };
                        new Chartist.Bar('#defaultChart', data);
                        //console.log(data);
                    })
                    .catch(err => { throw err });
            }

            function ageScale() {
                var url = '/db/ageAndAti';           
                var options = {
                    showLine: false,
                    axisX: {
                        type: Chartist.AutoScaleAxis,
                        onlyInteger: true
                    }
                };
                var data = {
                    labels: [],
                    series: [[]]
                };

                fetch(url)
                    .then(res => res.json())
                    .then((out) => {
                        //console.log(out);

                        for (i = 0; i < out.length; i++) {
                            data.series[0][i] = { x: out[i].Age, y: out[i].AtiScore };
                        };
                        //console.log(data);
                        new Chartist.Bar('#ageChart', data, options);
                    })
                    .catch(err => { throw err });
            }
            function showChart(elem) {
                if (elem === 'ageChart') {
                    //console.log('fiesta');
                    document.querySelector('#ageChart').style.display = 'block';
                    document.querySelector('#defaultChart').style.display = 'none';
                    document.querySelector('#sexChart').style.display = 'none';                  
                } else if (elem === 'defaultChart') {
                    //console.log('Nope');
                    document.querySelector('#defaultChart').style.display = 'block';
                    document.querySelector('#ageChart').style.display = 'none';
                    document.querySelector('#sexChart').style.display = 'none';                   
                } else if (elem === 'sexChart') {
                    document.querySelector('#defaultChart').style.display = 'none';
                    document.querySelector('#ageChart').style.display = 'none';
                    document.querySelector('#sexChart').style.display = 'block';                  
                }

            }


            function sexScale() {                
                var url = '/db/complex?sel[0]=atiScore&sel[1]=sex';
                var m = '<%= __('sex.male') %>';
                var f = '<%= __('sex.female') %>';
                var o = '<%= __('sex.other') %>';
                var options = {
                    showLine: false,
                    axisX: {
                        //type: Chartist.AutoScaleAxis,
                        //onlyInteger: true
                    },
                    seriesBarDistance: 15,
                };
                var data = {
                    labels: [m, f, o],
                    series: [[]]
                };

                fetch(url)
                    .then(res => res.json())
                    .then((out) => {
                        //console.log(out);
                        var male = 0;
                        var maleCounter = 0;
                        var female = 0;
                        var femaleCounter = 0;
                        var other = 0;
                        var otherCounter = 0;
                        for (i = 0; i < out.length; i++) {
                            if (out[i].sex === 3) {

                                other += out[i].atiScore;
                                otherCounter += 1;
                            } else if (out[i].sex === 1) {
                                male += out[i].atiScore;
                                maleCounter += 1;
                            } else if (out[i].sex === 2) {
                                female += out[i].atiScore;
                                femaleCounter += 1;
                            }
                        };
                        data.series[0][0] = { x: 'male', y: male / maleCounter }
                        data.series[0][1] = { x: 'female', y: female / femaleCounter }
                        data.series[0][2] = { x: 'other', y: other / otherCounter }
                        console.log(data);
                        new Chartist.Bar('#sexChart', data, options);
                    })
                    .catch(err => { throw err });
            }

           
        </script>
