<%- include ./partials/head %>

<link rel="stylesheet" href="/css/login.css" >

<title>ATI/Profil</title>
</head>


<body>
  <header>
    <%- include ./partials/header %>
  </header>

  <main>
  <div class="container" style="padding-top:4%">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-12">
								<a href="" class="active"><%- __('pwreset.sel-email') %></a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login-form" action="./reset" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="email" name="email" id="username" tabindex="1" class="form-control" placeholder="<%- __('pwreset.email') %>" value="" required>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="  col-sm-8 col-md-offset-2">
												<input type="submit" name="login-submit" id="login-submit" tabindex="2" class="form-control btn btn-login" value="<%- __('pwreset.sendLink') %>">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
        <p style="color:red; text-align: center; visibility: <%- msg %>;"> <%- __('pwreset.no-email') %></p>
			</div>
		</div>
	</div>
</main>
  <!-- <footer class="navbar navbar-fixed-bottom">
    <%- include ./partials/footer %>
  </footer> -->

<script>
/*fixed header */
var m = document.querySelector("main"),
    h = document.querySelector("header"),
    hHeight;

function setTopPadding() {
  hHeight = h.offsetHeight;
  m.style.paddingTop = hHeight + "px";
}

window.onload = function() {
  setTopPadding();
};
window.onresize = function() {
  setTopPadding();
};
</script>

</body>
