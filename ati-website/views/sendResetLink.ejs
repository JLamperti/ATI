<!DOCTYPE html>
<html>

<head lang="en">

<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">


<link rel="stylesheet" href="/css/bootstrap/bootstrap.css" >

<link rel="stylesheet" href="/chartist/dist/chartist.min.css">
<link rel="stylesheet" href="/css/app.css" >
<link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
<script src="/js/jquery-3.2.1.min.js"></script>
<script src="/js/bootstrap/bootstrap.min.js"></script>

<script src="/js/app.js"></script>

<link rel="stylesheet" href="/css/login.css" >

<title>ATI/Profil</title>
</head>


<body>
  <header>
    <%- include ./partials/header %>
  </header>

  <div class="container" style="padding-top:4%">
    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-xs-6">
								<a href="" class="active"><%- __('pwreset.sel-email') %></a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login-form" action="./reset" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="email" name="email" id="username" tabindex="1" class="form-control" placeholder="<%- __('pwreset.email') %>" value="" required>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="2" class="form-control btn btn-login" value="<%- __('pwreset.sendLink') %>">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
        <p style="color:red; text-align: center; visibility: <%- msg %>;"> <%- __('pwreset.no-email') %></p>
			</div>
		</div>
	</div>

  <footer class="navbar navbar-fixed-bottom">
    <%- include ./partials/footer %>
  </footer>

</body>
