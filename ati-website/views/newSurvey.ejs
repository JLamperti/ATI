<head lang="en">

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">


  <link rel="stylesheet" href="/css/bootstrap/bootstrap.css">

  <link rel="stylesheet" href="/chartist/dist/chartist.min.css">
  <link rel="stylesheet" href="/css/app.css">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css?family=Titillium+Web" rel="stylesheet">
  <script type="text/javascript" src="../js/jquery-3.2.1.min.js"></script>
  <script src="/js/bootstrap/bootstrap.min.js"></script>
  <script src="/js/newSurvey.js"></script>



  <title>ATI - New Survey</title>
  <link rel="stylesheet" href="/css/user.css">



</head>

<body>
  <section id="header">
    <nav class="navbar navbar-default navbar-noMargin" style="padding-right:1%">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
          <a class="navbar-brand" href="/">ATI</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li>
              <a>
                New Survey
              </a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a href="/user"><span class="glyphicon glyphicon-user"></span> Profil</a>
            </li>
            <li>
              <a href="/login"><span class="glyphicon "></span> Log Out </a>
            </li>
            <li class="">
              <!-- class="imgLangSmall li-header-right" style="margin-right: -5%"> -->
              <a href="" onclick="changeLang()"> <img src="/images/lang_de_en.png" class="" style="max-width:35px;max-height:35px;"> <%= __('toggletext') %></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

  </section>


  <section class="content">
    <div class="container">
      <div class="nested-container">
        <form class="" action="" method="post">

          <div class="clearfix">

            <div class="float-left">
              <p>
                <span class="grey text-item-descr">Survey Name</span>
                <input id="surveyName" type="text" name="Name" value="" autofocus="true">
              </p>
            </div>
          </div>


          <div class="clearfix">
            <div class="float-left">
              <p>
                <span class="grey text-item-descr">Close survey</span>
                <label>
                <input id="closeSurvey" type="checkbox" name="Name" value="">
                <span>only upload data</span>
                </label>
              </p>
            </div>
          </div>

          <div class="clearfix">
            <p>
              <span class="text-item-descr grey">Begin </span>
              <input id="begin" type="date" name="Begin" value="">
            </p>

            <p>
              <span class="text-item-descr grey">End (optional)</span>
              <input id="end" type="date" name="End" value="">
            </p>
          </div>

          <div class="">
            <p>
              <span class="grey text-item-descr">limit participation</span>
              <input id="enableMaxProbands" type="checkbox" name="enableMaxProbands" value="">
            </p>
          </div>

          <div class="">
            <p>
              <span class="grey text-item-descr">Maximum Participants</span>
              <input id="MaxProbands" type="number" name="MaxProbands" value="" min="0">
            </p>
          </div>

          <div class="">
            <div class="">
              <span class="text-item-descr grey">Description</span>
            </div>
            <div class="">
              <textarea id="description" rows="5" placeholder="A short description of the study" style="width:100%; min-width:200px;"></textarea>
            </div>
          </div>

          <hr>

          <h2>Data to be collected</h2>
          <label><span class="text-item-descr">Affinity for Technology-Interaction&nbsp;</span><input type="checkbox" name="age" value="" checked disabled></label>
          <br>
          <label><span class="text-item-descr">Age </span><input id="takeAge" type="checkbox" name="takeAge" value=""></label>
          <br>
          <label><span class="text-item-descr">Sex </span><input id="takeSex" type="checkbox" name="takeSex" value=""></label>
          <br>
          <label><span class="text-item-descr">Education </span><input id="takeEducation" type="checkbox" name="takeEducation" value=""></label>
          <hr style="padding-top:20px">


          <div id="controls" class="" style="padding-top:20px; padding-bottom:10%;">

            <button type="button" name="abort" class="float-left">Abort</button>
            <button id="submit" type="button" name="submit" class="float-right">Create Survey</button>
          </div>
        </form>


      </div>
    </div>


  </section>
  <footer>
    <%- include ./partials/footer %>
  </footer>

  <div id="invisibleVariableHolder">

  </div>
</body>
